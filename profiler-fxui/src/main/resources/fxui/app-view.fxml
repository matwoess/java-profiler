<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxui.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox>
        <Label text="Run mode:">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        <RadioButton fx:id="rbDefaultMode" selected="true" text="Instrument, compile, run, report">
            <font>
                <Font size="15.0"/>
            </font>
        </RadioButton>
        <RadioButton fx:id="rbInstrumentOnly" text="Instrument only">
            <font>
                <Font size="14.0"/>
            </font>
        </RadioButton>
        <RadioButton fx:id="rbReportOnly" text="Generate report only">
            <font>
                <Font size="14.0"/>
            </font>
        </RadioButton>
    </VBox>
    <HBox fx:id="hbMainFile" prefWidth="Infinity">
        <TextField fx:id="txtMainFile" promptText="Main java file" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="8.0"/>
            </HBox.margin>
        </TextField>
        <Button fx:id="btnMainFile" text="Select"/>
    </HBox>
    <HBox fx:id="hbProgramArgs">
        <TextField fx:id="txtProgramArgs" promptText="Program arguments" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox fx:id="hbSourcesDir" prefWidth="Infinity">
        <TextField fx:id="txtSourcesDir" promptText="Sources directory" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="8.0"/>
            </HBox.margin>
        </TextField>
        <Button fx:id="btnSourcesDir" text="Select"/>
    </HBox>
    <HBox prefWidth="Infinity">
        <TextField fx:id="txtOutputDir" promptText="Output directory" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="8.0"/>
            </HBox.margin>
        </TextField>
        <Button fx:id="btnOutputDir" text="Select"/>
    </HBox>
    <HBox>
        <HBox alignment="CENTER_LEFT" HBox.hgrow="SOMETIMES">
            <CheckBox fx:id="cbVerboseOutput" text="Verbose output">
                <HBox.margin>
                    <Insets right="16.0"/>
                </HBox.margin>
            </CheckBox>
            <CheckBox fx:id="cbSyncCounters" text="Synchronized counters"/>
        </HBox>
        <Button onAction="#onOpenReport" text="Open report">
            <HBox.margin>
                <Insets right="16.0"/>
            </HBox.margin>
        </Button>
        <Button defaultButton="true" onAction="#onExecuteTool" text="Run tool"/>
    </HBox>
    <VBox prefHeight="200.0">
        <ScrollPane style="-fx-background-color: #F3F9F322;" VBox.vgrow="ALWAYS">
            <TextFlow fx:id="txtFlowOutput"/>
        </ScrollPane>
    </VBox>
</VBox>
