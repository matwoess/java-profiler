<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="478.0" prefWidth="446.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label text="Run mode:">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Label>
         <RadioButton fx:id="rbDefaultMode" mnemonicParsing="false" selected="true" text="Instrument, compile, run, report" />
         <RadioButton fx:id="rbInstrumentOnly" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Instrument only" />
         <RadioButton fx:id="rbReportOnly" layoutX="10.0" layoutY="28.0" mnemonicParsing="false" text="Generate report only" />
      </children>
   </VBox>
   <HBox prefHeight="0.0" prefWidth="Infinity">
      <children>
         <TextField prefHeight="26.0" prefWidth="296.0" promptText="Main java file" HBox.hgrow="ALWAYS" />
         <Button mnemonicParsing="false" text="Select" />
      </children>
   </HBox>
   <HBox layoutX="30.0" layoutY="30.0" prefHeight="0.0" prefWidth="200.0">
      <children>
         <TextField prefHeight="26.0" prefWidth="350.0" promptText="Program arguments" HBox.hgrow="ALWAYS" />
      </children>
   </HBox>
   <HBox prefHeight="0.0" prefWidth="Infinity">
      <children>
         <TextField prefHeight="26.0" prefWidth="294.0" promptText="Sources directory" HBox.hgrow="ALWAYS" />
         <Button mnemonicParsing="false" text="Select" />
      </children>
   </HBox>
   <HBox prefHeight="0.0" prefWidth="Infinity">
      <children>
         <TextField prefHeight="26.0" prefWidth="294.0" promptText="Output directory" HBox.hgrow="ALWAYS" />
         <Button mnemonicParsing="false" text="Select" />
      </children>
   </HBox>
   <HBox>
      <children>
         <HBox alignment="CENTER_LEFT" HBox.hgrow="SOMETIMES">
            <children>
               <CheckBox mnemonicParsing="false" text="Synchronized counters">
                  <HBox.margin>
                     <Insets right="12.0" />
                  </HBox.margin></CheckBox>
               <CheckBox mnemonicParsing="false" text="Verbose output" />
            </children>
         </HBox>
          <Button defaultButton="true" onAction="#onExecuteTool" text="Run tool" />
      </children>
   </HBox>
   <TextArea fx:id="programOutput" prefHeight="200.0" prefWidth="Infinity" promptText="Program output" />
</VBox>
